  public void animation(RelativeLayout layout) {
        ScaleAnimation scale = new ScaleAnimation((float) 0.0, (float) 1.0, (float) 0.0, (float) 1.0, Animation.RELATIVE_TO_SELF, 0.5f, Animation.RELATIVE_TO_SELF, 0.5f);
        scale.setFillAfter(true);
        scale.setDuration(500);
        layout.startAnimation(scale);
    }
